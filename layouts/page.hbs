{{> head}}
<div class="container-fluid banner {{toLowerCase title}}">

  <div class="banner-inner">
    <header>
      <div class="row">

        {{> header}}

      </div>
    </header>
    <div class="banner-text-container">
      <div class="banner-text">
        <h1 class="title animated fadeInRight">{{title}}</h1>
        <p class="animated slideInUp">
          {{subhead}}
        </p>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="col-md-8 col-md-offset-2">
  <!-- Portfolio Page -->
  {{#if portfolio}}
    {{> projects}}
    {{else}}
    <!-- Contact Page -->
    {{#if contact}}
      {{> contact}}
      {{else}}
      <div class="page-contents">
        {{{contents}}}
      </div>
    {{/if}}
    <!-- End Contact Page -->
  {{/if}}
  <!-- End Portfolio Page -->


  </div>
</div>

{{> footer}}
