{{> head}}
<div class="container-fluid banner project-page">

  <div class="banner-inner">
    <header>
      <div class="row">

        {{> header}}

      </div>
    </header>
    <div class="banner-text-container">
      <div class="banner-text">
        <h1 class="title">{{title}}</h1>
        <h2 class="subtitle">
          {{subhead}}
        </h2>
      </div>
    </div>
  </div>
</div>
<div class="container main-container project-page">
  <div class="col-md-8 col-md-offset-2">
    <div class="title">
      <h2>{{title}}</h2>
    </div>
    <div class="row">
      <div class="col-md-8">
        {{{ contents }}}
      </div>
      <div class="col-md-4">
        <img src="{{image}}" alt="{{title}} Screenshot" class="img-responsive" />
        <div class="tags text-right">
          <h4>Technologies Used</h4>
          {{#each features}}
            <h6>{{this}}</h6>
          {{/each}}
        </div>
        <div class="text-right">
          <a href="{{url}}" target="_blank" rel="noopener"><button class="button">View  <i class="fa fa-external-link"></i></button></a>
          {{#if repo}}
            <br />
            <a href="{{repo}}" target="_blank" rel="noopener"><button class="button">Github Repo  <i class="fa fa-external-link"></i></button></a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <a href="/portfolio/">
      <button><i class="fa fa-angle-double-left"></i>  Back to Portfolio Page</button>
    </a>
  </div>
</div>
{{> footer}}
