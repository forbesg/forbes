{{> head}}
<div class="container-fluid banner project-page">
  <div class="banner-inner">
    {{> header}}
    <div class="banner-text-container">
      <div class="banner-text">
        <h1 class="title">{{title}}</h1>
        <h2 class="subtitle">
          {{subhead}}
        </h2>
      </div>
    </div>
  </div>
</div>
<div class="container main-container project-page">
  <div class="flexbox wrap negative-margin project-container">
    <div class="project-content">
      <div class="title">
        <h2>{{title}}</h2>
      </div>
      {{{ contents }}}
    </div>
    <div class="project-sidebar">
      <img src="{{image}}" alt="{{title}} Screenshot" class="img-responsive" />
      <div class="tags">
        <h4>Technologies Used</h4>
        {{#each features}}
          <h6>{{this}}</h6>
        {{/each}}
      </div>
      <div class="text-right">
        <a href="{{url}}" target="_blank" rel="noopener">
          <button class="button">View
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30">
              <path d="M 25.980469 2.9902344 A 1.0001 1.0001 0 0 0 25.869141 3 L 20 3 A 1.0001 1.0001 0 1 0 20 5 L 23.585938 5 L 13.292969 15.292969 A 1.0001 1.0001 0 1 0 14.707031 16.707031 L 25 6.4140625 L 25 10 A 1.0001 1.0001 0 1 0 27 10 L 27 4.1269531 A 1.0001 1.0001 0 0 0 25.980469 2.9902344 z M 6 7 C 4.9069372 7 4 7.9069372 4 9 L 4 24 C 4 25.093063 4.9069372 26 6 26 L 21 26 C 22.093063 26 23 25.093063 23 24 L 23 14 L 23 11.421875 L 21 13.421875 L 21 16 L 21 24 L 6 24 L 6 9 L 14 9 L 16 9 L 16.578125 9 L 18.578125 7 L 16 7 L 14 7 L 6 7 z" font-weight="400" font-family="sans-serif" white-space="normal" overflow="visible"/>
            </svg>
          </button>
        </a>
        {{#if repo}}
          <br />
          <a href="{{repo}}" target="_blank" rel="noopener">
            <button class="button external">Github Repo
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30">
                <path d="M 25.980469 2.9902344 A 1.0001 1.0001 0 0 0 25.869141 3 L 20 3 A 1.0001 1.0001 0 1 0 20 5 L 23.585938 5 L 13.292969 15.292969 A 1.0001 1.0001 0 1 0 14.707031 16.707031 L 25 6.4140625 L 25 10 A 1.0001 1.0001 0 1 0 27 10 L 27 4.1269531 A 1.0001 1.0001 0 0 0 25.980469 2.9902344 z M 6 7 C 4.9069372 7 4 7.9069372 4 9 L 4 24 C 4 25.093063 4.9069372 26 6 26 L 21 26 C 22.093063 26 23 25.093063 23 24 L 23 14 L 23 11.421875 L 21 13.421875 L 21 16 L 21 24 L 6 24 L 6 9 L 14 9 L 16 9 L 16.578125 9 L 18.578125 7 L 16 7 L 14 7 L 6 7 z" font-weight="400" font-family="sans-serif" white-space="normal" overflow="visible"/>
              </svg>
            </button>
          </a>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="">
    <a href="/portfolio/">
      <button><< Back to Portfolio Page</button>
    </a>
  </div>
</div>
{{> footer}}
