<div class="projects-block webapps">
  <h2>Web Application Projects</h2>
  <div class="flexbox wrap negative-margin">
    {{#each collections.webapps}}
      <div class="card">
        <figure>
          <img src="{{this.image}}" alt="{{this.title}} Screenshot" class="img-responsive" />
        </figure>
        <header>
          <h4>{{this.title}}</h4>
        </header>
        <div class="summary">
          <p>
            {{this.description}}
          </p>
        </div>
        <div class="button-container">
          <a href="/{{this.path}}/" class="button">View Project</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<hr>
