{{> head}}
  <div class="container-fluid banner">
    <div class="banner-inner">
      {{> header}}
      <div class="banner-text-container">
        <div class="banner-text">
          <h1 class="title">Forbes Gray</h1>
          <h2 class="subtitle">
            Web | Javascript | NodeJS | MongoDB
          </h2>
        </div>
      </div>
    </div>
  </div>
  <div class="container main-container">
    <div class="top-bottom-margin text-center">
      {{{ contents }}}
      <div class="text-center">
        <a href="/contact" class="button">Get in touch..</a>
      </div>
    </div>
    <hr>
    <div class="text-center top-bottom-margin">
      <div class="homepage-projects">
        <h3>Recent Projects...</h3>
        <div class="flexbox wrap negative-margin">
          {{#each collections.featured}}
            <div class="project">
              <div class="project-container">
                <div class="image-block">
                  <figure>
                    <img src="{{this.image}}" alt="{{this.title}} Image" />
                  </figure>
                  <div class="overlay-block">
                    <div class="text-block">
                      <h4>{{this.title}}</h4>
                      <h5>{{this.subhead}}</h5>
                      <a href="/{{this.path}}" class="button">View Project</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <a href="/portfolio" class="button">View Portfolio Page</a>
        </div>
      </div>
    </div>
  </div>

{{> footer}}
